.chat-nav_bar
.chat-side.clearfix
  .chat-side_user
    .chat-side_user-content
      %h3.header__name
        = current_user.name
      .chat-side_user-icon  
        %list
          = link_to new_group_path do
            = fa_icon 'pencil-square-o', class: 'icon'
        %list
          = link_to edit_user_path(current_user) do
            = fa_icon 'cog', class: 'icon'  
  .chat-side_group
    .chat-side_group-main
      - current_user.groups.each do |group|
        = link_to group_messages_path(group) do
          .chat-side_group-main-name
            = group.name
          .chat-side_group-main-message
            = group.show_last_message
          