.chat-main_header
  .chat-main_header--group
    %a.chat-main__header--group-edit-btn{:href => "/groups/#{params[:group_id]}/edit"}
      Edit
    .chat-main_header--group-name
      = @group.name

    .chat-main_header-members
      %p
        Members:
        = @users.pluck(:name).join(",")
.messages
  = render @messages
      
.chat-footer
  = form_for [@group, @message] do |f|
    = f.text_field :content, class: "message", id: "new_comment", placeholder: 'type a message'
    .form__mask
      = f.label :image, class: 'form__mask__image' do
        = fa_icon 'picture-o', class: 'icon'
        = f.file_field :image, class: 'hidden'
        = f.submit 'Send', class: 'submit'
